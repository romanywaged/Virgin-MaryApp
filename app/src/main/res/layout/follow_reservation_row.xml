<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/follow_reserv_card_bg"
    android:id="@+id/RV_follow_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingEnd="10dp"
        >
        <TextView
            android:id="@+id/eventTitleTv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/purple_200"
            android:textSize="18sp"
            android:text="هضة"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/eventDateLin_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/eventTitleTv_follow"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventDateTv_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="italic"
                android:text="2021-08-22"
                android:gravity="center" />

            <TextView
                android:id="@+id/eventDayTv_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="الاحد"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deb_time_lin_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@+id/eventDateLin_follow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/to_time_follow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/bold_home_text_13"
                android:text="10:00 PM"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to"
                style="@style/gray_text" />

        </LinearLayout>

        <ImageView
            android:id="@+id/icon_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/deb_time_lin_follow"
            android:src="@drawable/ic_from_to_gray"
            android:layout_below="@+id/eventDateLin_follow"
            android:layout_marginTop="6dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"/>

        <LinearLayout
            android:id="@+id/timeLin_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventDateLin_follow"
            android:layout_toEndOf="@+id/icon_follow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/from_time_follow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/bold_home_text_13"
                android:text="06:00 PM"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/from"
                style="@style/gray_text" />
        </LinearLayout>
        <Button
            android:id="@+id/cancel_reservation_btn_follow"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_below="@id/timeLin_follow"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cancel_btn_style"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="الغاء"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>
